<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bilgeadam.boost.java.course01.lesson068.view.login.LoginViewController">
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="400.0" style="-fx-background-color: #2D3447;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="87.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@./Logo.PNG" />
               </image>
            </ImageView>
            <Label layoutX="20.0" layoutY="67.0" prefHeight="20.0" prefWidth="100.0" text="Kullanıcı Adı:" textFill="#f7faf5">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label layoutX="20.0" layoutY="101.0" prefHeight="20.0" prefWidth="100.0" text="Şifre" textFill="#faf7f7">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="fldUserName" layoutX="133.0" layoutY="64.0" prefHeight="20.0" promptText="Kullanıcı adı giriniz" />
            <PasswordField fx:id="fldUserPassword" layoutX="132.0" layoutY="99.0" prefHeight="26.0" prefWidth="152.0" promptText="Şifrenizi giriniz" />
            <Button fx:id="btnCancel" layoutX="133.0" layoutY="153.0" mnemonicParsing="false" onMouseClicked="#cancelAction" text="Vazgeç">
               <effect>
                  <DropShadow />
               </effect></Button>
            <Button fx:id="btnCommit" layoutX="227.0" layoutY="153.0" mnemonicParsing="false" onMouseClicked="#commitAction" text="Tamam">
               <effect>
                  <Lighting>
                     <bumpInput>
                        <Shadow />
                     </bumpInput>
                     <light>
                        <Light.Distant />
                     </light>
                  </Lighting>
               </effect></Button>
         </children>
      </AnchorPane>
   </center>
</BorderPane>